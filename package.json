{
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "babel-jest": "^27.4.2",
    "core-js": "^3.19.3",
    "jest": "^27.4.3",
    "mutationobserver-shim": "^0.3.7",
    "regenerator-runtime": "^0.13.9"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": ["<rootDir>/spec"],
    "setupFiles" : [
      "core-js/stable",
      "regenerator-runtime/runtime"
    ],
    "moduleNameMapper": {
      "^/js/(.*)$": "<rootDir>/js/$1"
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ]
  }
}
